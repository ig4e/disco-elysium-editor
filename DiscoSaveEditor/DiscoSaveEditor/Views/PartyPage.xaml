<Page
    x:Class="DiscoSaveEditor.Views.PartyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer Padding="32,24,32,32">
        <StackPanel Spacing="24" MaxWidth="600">

            <TextBlock Text="Party &amp; Location" Style="{StaticResource TitleTextBlockStyle}" />

            <!-- Area -->
            <StackPanel Spacing="4">
                <TextBlock Text="Current Area" Style="{StaticResource CaptionTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBox Text="{x:Bind ViewModel.AreaId, Mode=TwoWay}" />
            </StackPanel>

            <!-- Kim -->
            <TextBlock Text="Kim Kitsuragi" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,8,0,0" />
            <StackPanel Spacing="8">
                <ToggleSwitch Header="Kim in Party" IsOn="{x:Bind ViewModel.IsKimInParty, Mode=TwoWay}" />
                <ToggleSwitch Header="Kim Left Outside" IsOn="{x:Bind ViewModel.IsKimLeftOutside, Mode=TwoWay}" />
                <ToggleSwitch Header="Kim Abandoned" IsOn="{x:Bind ViewModel.IsKimAbandoned, Mode=TwoWay}" />
                <ToggleSwitch Header="Kim Away Until Morning" IsOn="{x:Bind ViewModel.IsKimAwayUpToMorning, Mode=TwoWay}" />
                <ToggleSwitch Header="Kim Sleeping in His Room" IsOn="{x:Bind ViewModel.IsKimSleepingInHisRoom, Mode=TwoWay}" />
            </StackPanel>

            <!-- Cuno -->
            <TextBlock Text="Cuno" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,8,0,0" />
            <StackPanel Spacing="8">
                <ToggleSwitch Header="Cuno in Party" IsOn="{x:Bind ViewModel.IsCunoInParty, Mode=TwoWay}" />
                <ToggleSwitch Header="Cuno Left Outside" IsOn="{x:Bind ViewModel.IsCunoLeftOutside, Mode=TwoWay}" />
                <ToggleSwitch Header="Cuno Abandoned" IsOn="{x:Bind ViewModel.IsCunoAbandoned, Mode=TwoWay}" />
            </StackPanel>

            <!-- Misc -->
            <TextBlock Text="Status" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,8,0,0" />
            <ToggleSwitch Header="Has Hangover" IsOn="{x:Bind ViewModel.HasHangover, Mode=TwoWay}" />

            <!-- HUD / Portrait -->
            <TextBlock Text="HUD &amp; Portrait" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,8,0,0" />
            <StackPanel Spacing="8">
                <ToggleSwitch Header="Portrait Obscured" IsOn="{x:Bind ViewModel.PortraitObscured, Mode=TwoWay}" />
                <ToggleSwitch Header="Portrait Shaved" IsOn="{x:Bind ViewModel.PortraitShaved, Mode=TwoWay}" />
                <ToggleSwitch Header="Fascist Portrait" IsOn="{x:Bind ViewModel.PortraitFascist, Mode=TwoWay}" />
            </StackPanel>

            <!-- Game Mode -->
            <TextBlock Text="Game Mode" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,8,0,0" />
            <ComboBox SelectedItem="{x:Bind ViewModel.GameMode, Mode=TwoWay}" 
                      ItemsSource="{x:Bind ViewModel.GameModes}" 
                      Header="Difficulty" HorizontalAlignment="Stretch" />

            <!-- Location Discovery -->
            <TextBlock Text="Quick Travel" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,8,0,0" />
            <StackPanel Spacing="8">
                <ToggleSwitch Header="Church Visited" IsOn="{x:Bind ViewModel.WasChurchVisited, Mode=TwoWay}" />
                <ToggleSwitch Header="Fishing Village Visited" IsOn="{x:Bind ViewModel.WasFishingVillageVisited, Mode=TwoWay}" />
                <ToggleSwitch Header="Church Quick Travel Discovered" IsOn="{x:Bind ViewModel.WasQuicktravelChurchDiscovered, Mode=TwoWay}" />
                <ToggleSwitch Header="Fishing Village Quick Travel Discovered" IsOn="{x:Bind ViewModel.WasQuicktravelFishingVillageDiscovered, Mode=TwoWay}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
