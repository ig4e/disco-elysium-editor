<Page
    x:Class="DiscoSaveEditor.Views.CharacterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:DiscoSaveEditor.ViewModels">

    <ScrollViewer Padding="32,24,32,32">
        <StackPanel Spacing="24" MaxWidth="900">

            <!-- Player Resources -->
            <Grid Padding="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Player Resources" Style="{StaticResource TitleTextBlockStyle}" Grid.Column="0" />
                <Button Content="Max All Skills" Command="{x:Bind ViewModel.MaxAllSkillsCommand}" 
                        Grid.Column="1" VerticalAlignment="Bottom" />
            </Grid>
            <Grid ColumnSpacing="16" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Row 0 -->
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="XP" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.XpAmount, Mode=TwoWay}" Minimum="0" SpinButtonPlacementMode="Compact" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <TextBlock Text="Level" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.Level, Mode=TwoWay}" Minimum="1" SpinButtonPlacementMode="Compact" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="0">
                    <TextBlock Text="Skill Points" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.SkillPoints, Mode=TwoWay}" Minimum="0" SpinButtonPlacementMode="Compact" />
                </StackPanel>

                <!-- Row 1 -->
                <StackPanel Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="Money (cents)" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.Money, Mode=TwoWay}" Minimum="0" SpinButtonPlacementMode="Compact" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="1">
                    <TextBlock Text="Health (Endurance)" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.Health, Mode=TwoWay}" Minimum="0" SpinButtonPlacementMode="Compact" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="1">
                    <TextBlock Text="Morale (Volition)" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.Morale, Mode=TwoWay}" Minimum="0" SpinButtonPlacementMode="Compact" />
                </StackPanel>

                <!-- Row 2: Time -->
                <StackPanel Grid.Column="0" Grid.Row="2">
                    <TextBlock Text="Day" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.Day, Mode=TwoWay}" Minimum="1" SpinButtonPlacementMode="Compact" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="2">
                    <TextBlock Text="Hour (0-23)" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.Hours, Mode=TwoWay}" Minimum="0" Maximum="23" SpinButtonPlacementMode="Compact" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="2">
                    <TextBlock Text="Minute (0-59)" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <NumberBox Value="{x:Bind ViewModel.Minutes, Mode=TwoWay}" Minimum="0" Maximum="59" SpinButtonPlacementMode="Compact" />
                </StackPanel>
            </Grid>

            <!-- Abilities -->
            <TextBlock Text="Abilities" Style="{StaticResource TitleTextBlockStyle}" Margin="0,16,0,0" />
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Abilities}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout MinItemWidth="200" MinColumnSpacing="12" MinRowSpacing="12" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="vm:AbilityDisplayItem">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" FontSize="16" />
                                    <TextBlock Text="{x:Bind TypeCode}" Foreground="{ThemeResource TextFillColorTertiaryBrush}" 
                                               VerticalAlignment="Center" FontSize="12" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Value" VerticalAlignment="Center" />
                                    <NumberBox Value="{x:Bind Value, Mode=TwoWay}" Minimum="1" Maximum="12" 
                                               SpinButtonPlacementMode="Compact" Width="120" />
                                </StackPanel>
                                <CheckBox Content="Signature" IsChecked="{x:Bind IsSignature, Mode=TwoWay}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!-- Skills -->
            <TextBlock Text="Skills" Style="{StaticResource TitleTextBlockStyle}" Margin="0,16,0,0" />
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Skills}">
                <ItemsRepeater.Layout>
                    <StackLayout Spacing="4" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="vm:SkillDisplayItem">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="4" Padding="12,8">
                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" />
                                    <TextBlock Text="{x:Bind AbilityType}" FontSize="11" 
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                </StackPanel>

                                <TextBlock Grid.Column="1" Text="{x:Bind TypeCode}" FontSize="10" 
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}" 
                                           VerticalAlignment="Center" />

                                <NumberBox Grid.Column="2" Value="{x:Bind Value, Mode=TwoWay}" 
                                           Minimum="1" Maximum="20" SpinButtonPlacementMode="Compact" 
                                           Width="120" VerticalAlignment="Center" />

                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <TextBlock Text="Rank:" FontSize="11" VerticalAlignment="Center" />
                                    <NumberBox Value="{x:Bind RankValue, Mode=TwoWay}" 
                                               Minimum="0" Maximum="10" SpinButtonPlacementMode="Compact" 
                                               Width="100" />
                                </StackPanel>

                                <TextBlock Grid.Column="4" Text="{x:Bind Description}" FontSize="11"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextTrimming="CharacterEllipsis" VerticalAlignment="Center"
                                           MaxLines="1" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </StackPanel>
    </ScrollViewer>
</Page>
